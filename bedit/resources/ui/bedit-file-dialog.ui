<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="BeditFileDialogWindow" parent="GtkWindow">
    <property name="modal">true</property>
    <property name="destroy-with-parent">true</property>
    <child>
      <object class="BrkToolbarView">
        <property name="content">
          <object class="GtkPaned">
            <property name="hexpand">true</property>
            <property name="vexpand">true</property>
            <child>
              <object class="GtkBox">
                <child>
                  <object class="GtkListView">
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="BrkToolbarView">
                <child type="top">
                  <object class="BrkToolbar">
                    <child>
                      <object class="GtkToggleButton" id="filter_view_toggle">
                        <property name="icon-name">edit-find</property>
                        <property name="tooltip-text">Toggle search (automatic on text input)</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkInput" id="filter_input">
                      </object>
                    </child>
                    <child>
                      <object class="BrkButtonGroup">
                        <child>
                          <object class="GtkToggleButton" id="show_binary_toggle">
                            <property name="label">01</property>
                            <property name="tooltip-text">Show binary files (Ctrl+B)</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkToggleButton" id="show_hidden_toggle">
                            <property name="label">.h</property>
                            <property name="tooltip-text">Show hidden files (Ctrl+H)</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="BrkButtonGroup">
                        <child>
                          <object class="GtkToggleButton" id="icon_view_toggle">
                            <property name="icon-name">view-grid</property>
                            <property name="tooltip-text">Grid view</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkToggleButton" id="list_view_toggle">
                            <property name="icon-name">view-list</property>
                            <property name="tooltip-text">List view</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkToggleButton" id="tree_view_toggle">
                            <property name="icon-name">view-tree</property>
                            <property name="tooltip-text">Tree view</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                <property name="content">
                  <object class="GtkStack" id="view_stack">
                    <property name="hexpand">true</property>
                    <property name="vexpand">true</property>
                    <child>
                      <object class="GtkStackPage">
                        <property name="child">
                          <object class="BeditFileDialogFilterView" id="filter_view">
                          </object>
                        </property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkStackPage">
                        <property name="child">
                          <object class="BeditFileDialogIconView" id="icon_view">
                          </object>
                        </property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkStackPage">
                        <property name="child">
                          <object class="BeditFileDialogListView" id="list_view">
                          </object>
                        </property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkStackPage">
                        <property name="child">
                          <object class="BeditFileDialogTreeView" id="tree_view">
                          </object>
                        </property>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>
          </object>
        </property>
        <child type="bottom">
          <object class="GtkActionBar" id="action_bar">
            <child type="end">
              <object class="GtkButton">
                <property name="label">Cancel</property>
                <property name="action-name">cancel</property>
              </object>
            </child>
            <child type="end">
              <object class="GtkButton">
                <property name="label">Open</property>
                <property name="action-name">open</property>
                <style>
                  <class name="suggested-action"/>
                </style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>

